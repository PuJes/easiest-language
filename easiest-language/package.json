{
  "name": "easiest-language",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cypress:run",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "lh:ci": "lighthouse http://localhost:3000 --quiet --chrome-flags='--headless=new' --only-categories=performance,accessibility,best-practices,seo",
    "deploy:cloudbase": "bash scripts/deploy-cloudbase.sh",
    "deploy:quick": "bash quick-deploy.sh",
    "build:cloudbase": "cloudbase framework deploy",
    "preview:cloudbase": "cloudbase hosting deploy -e $CLOUDBASE_ENV_ID"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "exclude": [
      "src/**/*.test.{js,jsx,ts,tsx}",
      "src/**/*.spec.{js,jsx,ts,tsx}",
      "src/**/__tests__/**",
      "src/**/*.stories.{js,jsx,ts,tsx}",
      "src/**/*.d.ts"
    ],
    "reporter": [
      "text",
      "html",
      "lcov",
      "json"
    ],
    "report-dir": "coverage",
    "check-coverage": true,
    "statements": 90,
    "branches": 90,
    "functions": 90,
    "lines": 90
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.4",
    "framer-motion": "^12.23.12",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.6",
    "@eslint/eslintrc": "^3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^15.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "lighthouse": "^12.8.2",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^16.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.13",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*": {
      "{js,jsx,ts,tsx,css,md}": "prettier --write"
    }
  }
}
